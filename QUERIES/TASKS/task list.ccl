SELECT
	A.ACTIVE_DT_TM
	, A.ACTIVE_IND
	, A.DESCRIPTION
	, A.INACTIVE_DT_TM
	, A.INST_ID
	, A.LAST_UTC_TS
	, A.OLD_TASK_NUMBER
	, A.OPTIONAL_REQUIRED_FLAG
	, A.ROWID
	, A.SUBORDINATE_TASK_IND
	, A.TASK_NUMBER ; join with UPDT_TASK column on base table
	, A.TEXT
	, A.TXN_ID_TEXT
	, A.UPDT_APPLCTX
	, A.UPDT_CNT
	, A.UPDT_DT_TM
	, A.UPDT_ID
	, A.UPDT_TASK

FROM
	APPLICATION_TASK   A

;WHERE A.TASK_NUMBER = 4250501

WITH NOCOUNTER, SEPARATOR=" ", FORMAT, time = 10
