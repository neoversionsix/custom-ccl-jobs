SELECT
	N.PVC_NAME
	, N.PVC_VALUE
	, V.VIEW_NAME
	, V_POSITION_DISP = UAR_GET_CODE_DISPLAY(V.POSITION_CD)
	, V.APPLICATION_NUMBER
	, V.VIEW_PREFS_ID
	, V.VIEW_SEQ

FROM
	NAME_VALUE_PREFS   N
	, VIEW_PREFS   V

PLAN N

JOIN V
	WHERE V.VIEW_PREFS_ID = N.PARENT_ENTITY_ID

WITH MAXREC = 5000, NOCOUNTER, SEPARATOR=" ", FORMAT, TIME = 10